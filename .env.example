# EnteAI Configuration
# Copy this file to .env and customize as needed

# Directory Configuration
DOCUMENTS_DIR=documents
STORAGE_DIR=storage

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# Text Processing
CHUNK_SIZE=300
CHUNK_OVERLAP=50

# Search Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.3

# LLM Configuration
OLLAMA_MODEL=phi
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=300

# File Upload
MAX_FILE_SIZE_MB=10

# UI Configuration
ENABLE_TYPING_EFFECT=true
TYPING_SPEED=0.01

# Logging
LOG_LEVEL=INFO
LOG_FILE=enteai.log
